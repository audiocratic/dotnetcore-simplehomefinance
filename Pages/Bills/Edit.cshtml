@page
@model SimpleBillPay.Pages.Bills.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Bills</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillInstance.ID" />
            <div class="form-group">
                <label asp-for="BillInstance.BillTemplateID" class="control-label"></label>
                <select asp-for="BillInstance.BillTemplateID" class="form-control" asp-items="ViewBag.BillTemplateID"></select>
                <span asp-validation-for="BillInstance.BillTemplateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillInstance.Amount" class="control-label"></label>
                <input asp-for="BillInstance.Amount" class="form-control" />
                <span asp-validation-for="BillInstance.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillInstance.DueDate" class="control-label"></label>
                <input asp-for="BillInstance.DueDate" class="form-control" />
                <span asp-validation-for="BillInstance.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
